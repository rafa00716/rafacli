{
  "git": {
    "requireCleanWorkingDir": false,
    "add": true,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "autoGenerate": true,
    "tokenRef": "${GITHUB_TOKEN}"
  },
  "npm": {
    "publish": true
  }
}
